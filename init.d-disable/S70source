NAME="Source Control"
DAEMON="/mnt/PIHU_APP/defender-headunit/hu_src_ctrl.py"
DAEMONOPTS=""

[ -x $DAEMON ] || exit 1

retval=0

# PID (created by application)
PIDFILE=/var/run/hu.pid

start() {
        echo "Starting $NAME..."
        start-stop-daemon -b -x $DAEMON -p $PIDFILE -S -- $DAEMONOPTS
        retval=$?
        #  echo "Starting $NAME..."
        #  $DAEMON $DAEMONOPTS &
}

stop() {
        echo "Stopping $NAME"
        start-stop-daemon -x $DAEMON -p $PIDFILE -K
        retval=$?
}

case "$1" in
  start)
        start
        ;;
  stop)
        stop
        ;;
  restart|reload)
        stop
        start
        ;;
  *)
        echo "Usage: $0 {start|stop|restart}"
        exit 1
esac

exit $retval
