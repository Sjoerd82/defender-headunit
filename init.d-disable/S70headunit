#!/bin/sh

# APPLICATION
NAME="Headunit"
DAEMON="/mnt/PIHU_APP/defender-headunit/hu.py"

if [ -n "$HU_SOURCE" ]; then
  DAEMONOPTS="--source $HU_SOURCE"
else
  DAEMONOPTS=""
fi

# PID (created by application)
PIDFILE=/var/run/hu.pid

start() {
        if [ -f $DAEMON ]; then
          echo "Starting $NAME..."
          $DAEMON $DAEMONOPTS &
        else
          echo "$DAEMON not found!"
        fi
}

stop() {
        if [ -f $PIDFILE ]; then
            echo "Stopping $NAME"
            PID=`cat $PIDFILE`
            kill -HUP $PID
            rm -f $PIDFILE
        else
            echo "$PIDFILE not found, aborting..."
        fi
}

case "$1" in
  start)
        start
        ;;
  stop)
        stop
        ;;
  restart|reload)
        stop
        start
        ;;
  *)
        echo "Usage: $0 {start|stop|restart}"
        exit 1
esac

exit $?