{
	  "gpio_mode": "BCM"
	, "long_press_ms": 800
	, "base_modes": [ "volume" ]
	, "mode_timeout": 5
	, "devices": [
		{ 	  "name": "multi_encoder"
			, "type": "rotenc"
			, "clk": 13
			, "dt": 6
		},
		{ 	  "name": "multi_enc_sw"
			, "sw": 26
			, "gpio_on": "low"
			, "gpio_pullupdown": "up"
			, "debounce": 10
		}
	]
	,"mode_sets": [
		{	  "id": "modecycle1"
			, "mode_list": [ "volume", "track", "bass", "treble", "menu" ]
			, "base_modes": [ "volume" ]
			, "reset": 5
		}
	]
	,"functions": [
		{
			  "name": "toggler"
			, "function": null
			, "short_press": [ "multi_enc_sw" ]
			, "mode_cycle": "modecycle1"
			, "mode_select": [ "volume", "track", "bass", "treble", "menu" ]
		},
		{
			  "name":"track_select"
			, "function_cw":"PLAYER_NEXT"
			, "function_ccw":"PLAYER_PREV"
			, "encoder":"multi_encoder"
			, "mode": "track"
		},
		{
			  "name":"bass"
			, "function_cw":"BASS_INC"
			, "function_ccw":"BASS_DEC"
			, "encoder" :"multi_encoder"
			, "mode":"bass"
		},
		{
			  "name":"treble"
			, "function_cw":"TREBLE_INC"
			, "function_ccw":"TREBLE_DEC"
			, "encoder" :"multi_encoder"
			, "mode":"treble"
		},
		{
			  "name":"browse_menu"
			, "function_cw":"MENU_SCROLL_DOWN"
			, "function_ccw":"MENU_SCROLL_UP"
			, "encoder":"multi_encoder"
			, "mode":"menu"
		},
		{
			  "name":"next_source"
			, "function":"SOURCE_NEXT"
			, "long_press": [ "multi_enc_sw" ]
			, "mode": "all"
		}
	]
}