{
	  "gpio_mode": "BCM"
	, "long_press_ms": 800
	, "base_modes": [ "track" ]
	, "mode_timeout": 8
	, "devices": [
		{ 	  "name": "multi_encoder"
			, "type": "rotenc"
			, "clk": 13
			, "dt": 6
		},
		{ 	  "name": "multi_enc_sw"
			, "sw": 26
			, "gpio_on": "low"
			, "gpio_pullupdown": "up"
			, "debounce": 10
		},
		{ 	  "name": "rgb_1"
			, "type": "rgb_pwm"
			, "r": 16
			, "g": 12
			, "b": 23
			, "startup": "#ff0000"
		}
	]
	, "mode_sets": [
		{	  "id": "modecycle1"
			, "mode_list": [ "track", "folder", "random" ]
			, "base_mode": "track"
			, "reset": 8
			, "authorative": true
		},
		{
			"id": "random"
			, "mode_list": [ "random_off", "random_folder", "random_artist", "random_genre", "random_playlist" ]
		}
	]
	, "events": [
		{
			  "name": "mode_track"
			, "type": "mode_change"
			, "modes": [ "track" ]
			, "device": "rgb_1"
			, "pattern": "on"
			, "rgb": "#ff0000"
		},
		{
			  "name": "mode_folder"
			, "type": "mode_change"
			, "modes": [ "folder" ]
			, "device": "rgb_1"
			, "pattern": "on"
			, "rgb": "#ff00ff"
		},
		{
			  "name": "mode_random"
			, "type": "mode_change"
			, "modes": [ "random" ]
			, "device": "rgb_1"
			, "pattern": "on"
			, "rgb": "#00fff"
		},
		{
			  "name": "cmd_source_next"
			, "type": "command"
			, "command": [ "SOURCE-NEXT" ]
			, "device": "rgb_1"
			, "pattern": "blink"
			, "rgb": "#ff00ff"
		},
		{
			  "name": "fnc_player_next"
			, "type": "function"
			, "command": [ "track_select" ]
			, "device": "rgb_1"
			, "pattern": "blink"
			, "rgb": "#00ff00"
		}
	]
	, "functions": [
		{
			  "name": "toggler"
			, "function": null
			, "short_press": [ "multi_enc_sw" ]
			, "mode_cycle": "modecycle1"
			, "mode_select": [ "track", "folder", "random" ]
		},
		{
			  "name":"track_select"
			, "function_cw":"PLAYER-NEXT"
			, "function_ccw":"PLAYER-PREV"
			, "encoder":"multi_encoder"
			, "mode": "track"
		},
		{
			  "name":"folder_select"
			, "function_cw":"PLAYER-NEXTFOLDER"
			, "function_ccw":"PLAYER-PREVFOLDER"
			, "encoder":"multi_encoder"
			, "mode": "folder"
		},
		{
			  "name":"random"
			, "function_cw":"PLAYER-RANDOM-SET"
			, "function_ccw":"PLAYER-RANDOM-SET"
			, "encoder" :"multi_encoder"
			, "mode":"random"
		},
		{
			  "name":"next_source"
			, "function":"SOURCE-NEXT"
			, "long_press": [ "multi_enc_sw" ]
			, "mode": "all"
		}
	]
}