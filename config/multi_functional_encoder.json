{
	  "gpio_mode":"BCM"
	, "devices": [
		{ 	  "name": "multi_encoder"
			, "type": "rotenc"
			, "clk":13
			, "dt":6
		},
		{ 	  "name": "multi_enc_sw"
			, "sw":26
			, "gpio_on": "low"
			, "debounce": 10
		}
	]
	,"functions": [
		{
			  "name":"toggler"
			, "function":null
			, "short_press": [ "multi_enc_sw" ]
			, "mode_select": [ null, "volume", "bass", "treble", "menu" ]
			, "mode_reset": 5
		},
		{
			  "name":"track_select"
			, "function":"TRACK"
			, "encoder":"multi_encoder"
			, "mode": null
		},
		{
			  "name":"volume"
			, "function":"VOLUME"
			, "encoder":"multi_encoder"
			, "mode":"volume"
		},
		{
			  "name":"bass"
			, "function":"BASS"
			, "encoder" :"multi_encoder"
			, "mode":"bass"
		},
		{
			  "name":"treble"
			, "function":"TREBLE"
			, "encoder" :"multi_encoder"
			, "mode":"treble"
		},
		{
			  "name":"browse_menu"
			, "function":"MENU_SCROLL"
			, "encoder":"multi_encoder"
			, "mode":"menu"
		},
		{
			  "name":"toggle_random"
			, "function":"SOURCE"
			, "long_press": [ "multi_enc_sw" ]
		}
	]
}